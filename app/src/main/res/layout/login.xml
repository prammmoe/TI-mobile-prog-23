<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login"
        android:fontFamily="@font/BeVietnamPro_ExtraBold"
        android:textSize="36sp"
        android:textColor="#3D3F4F"
        android:layout_marginTop="279sp"/>

    <EditText
        android:id="@+id/emailLog"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:background="@drawable/bg_button"
        android:backgroundTint="#F3F6FB"
        android:layout_marginTop="347sp"
        android:hint="Email"
        android:textColorHint="#9EA0AE"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:fontFamily="@font/BeVietnamPro_SemiBold"/>

    <EditText
        android:id="@+id/passLog"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:background="@drawable/bg_button"
        android:backgroundTint="#F3F6FB"
        android:layout_marginTop="417sp"
        android:hint="Password"
        android:textColorHint="#9EA0AE"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:fontFamily="@font/BeVietnamPro_SemiBold"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/bg_button"
        android:text="Login"
        android:fontFamily="@font/BeVietnamPro_SemiBold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="666sp"
        android:layout_marginHorizontal="16sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="151dp"
        android:fontFamily="@font/be_vietnam_pro"
        android:text="New to us?"
        android:textColor="#9EA0AE" />

    <Button
        android:id="@+id/buttonRegister"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="183dp"
        android:layout_marginTop="731dp"
        android:layout_marginEnd="102dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/metric_green" />

</RelativeLayout>