<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Register">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Register"
        android:fontFamily="@font/be_vietnam_pro_extrabold"
        android:textSize="36sp"
        android:textColor="#3D3F4F"
        android:layout_marginTop="211sp" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:background="@drawable/bg_button"
        android:backgroundTint="#F3F6FB"
        android:layout_marginTop="279sp"
        android:hint="Full name"
        android:textColorHint="#9EA0AE"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:fontFamily="@font/be_vietnam_pro_semibold"/>

    <EditText
        android:id="@+id/emailReg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:background="@drawable/bg_button"
        android:backgroundTint="#F3F6FB"
        android:layout_marginTop="343sp"
        android:hint="Email"
        android:textColorHint="#9EA0AE"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:fontFamily="@font/be_vietnam_pro_semibold"/>

    <EditText
        android:id="@+id/passReg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:background="@drawable/bg_button"
        android:backgroundTint="#F3F6FB"
        android:layout_marginTop="407sp"
        android:hint="Password"
        android:textColorHint="#9EA0AE"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:fontFamily="@font/be_vietnam_pro_semibold"/>

    <EditText
        android:id="@+id/confirmPassReg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:background="@drawable/bg_button"
        android:backgroundTint="#F3F6FB"
        android:layout_marginTop="471sp"
        android:hint="Confirm password"
        android:textColorHint="#9EA0AE"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:fontFamily="@font/be_vietnam_pro_semibold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingLeft="24sp"
        android:paddingRight="24sp"
        android:text="By creating an account, you have accepted and are subject to our terms of service."
        android:fontFamily="@font/be_vietnam_pro_semibold"
        android:layout_marginTop="602sp"
        android:textColor="#9EA0AE"/>

    <Button
        android:id="@+id/RegButton"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/bg_button"
        android:text="Register"
        android:fontFamily="@font/be_vietnam_pro_semibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="666sp"
        android:layout_marginHorizontal="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:orientation="horizontal"
        android:layout_marginTop="739sp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/be_vietnam_pro_semibold"
            android:text="Joined us before? "
            android:textColor="#9EA0AE"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/metric_green"
            android:fontFamily="@font/be_vietnam_pro_semibold"
            android:textSize="12sp"/>
    </LinearLayout>

