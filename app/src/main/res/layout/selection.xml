<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selection"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/metric"
        android:src="@drawable/metric_logo_green" />

    <TextView
        android:id="@+id/metric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/metric"
        android:textAlignment="center"
        android:textColor="#3D3F4F"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/BeVietnamPro_ExtraBold"/>

    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/metric"
        android:text="Register"
        android:fontFamily="@font/BeVietnamPro_SemiBold"
        android:backgroundTint="#00B07B"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_register"
        android:text="Log In"
        android:fontFamily="@font/BeVietnamPro_SemiBold"
        android:backgroundTint="#F3F6FB"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#9EA0AE"
        android:background="@drawable/bg_button"
        android:textAllCaps="false" />

</RelativeLayout>